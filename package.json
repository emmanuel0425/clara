{
  "name": "clara-cypress",
  "version": "1.0.0",
  "description": "Web Automation Test With Cypress",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "all-tests-headless-chrome": "cypress run --browser chrome --spec 'cypress/features/*.feature'",
    "login-tests-headless-chrome": "cypress run --browser chrome -e TAGS=\"@login\"",
    "checkout-tests-headless-chrome": "cypress run --browser chrome -e TAGS=\"@checkout\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmanuel0425/clara.git"
  },
  "author": "Emmanuel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emmanuel0425/clara/issues"
  },
  "homepage": "https://github.com/emmanuel0425/clara#readme",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^17.2.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@faker-js/faker": "^9.8.0",
    "cypress": "^12.17.4",
    "cypress-xpath": "^2.0.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "multiple-cucumber-html-reporter": "^3.4.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.7.3"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/e2e/*.spec.ts",
    "html": {
      "enabled": true,
      "output": "cypress/reports/cucumber-html/cucumber-report.html"
    },
    "messages": {
      "enabled": true,
      "output": "cypress/reports/cucumber-ndjson/cucumber-report.ndjson"
    },
    "json": {
      "enabled": true,
      "formatter": "cucumber-json-formatter",
      "output": "cypress/reports/cucumber-json/cucumber-report.json"
    }
  }
}
